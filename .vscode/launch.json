{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Debug (venv)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host", "0.0.0.0",
                "--port", "8000",
                "--reload"
            ],
            "python": "${workspaceFolder}/back-end/venv/Scripts/python.exe",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/back-end"
            },
            "jinja": true
        }
    ]
}
